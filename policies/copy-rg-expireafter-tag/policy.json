{
    "properties": {
        "displayName": "Append tags and their values from the resource group",
        "mode": "Indexed",
        "metadata": {
            "category": "Tags"
        },
        "parameters": {
            "expireaftertag": {
                "type": "String",
                "metadata": {
                    "displayName": "ExpireAfter Tag",
                    "description": "Copies the ExpireAfter tag to a new resource if it exist on the resource group, will only run on sandbox environments"
                }
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "[concat('tags[', parameters('expireaftertag'), ']')]",
                        "exists": "false"
                    },
                    {
                        "value": "[resourceGroup().tags[parameters('expireaftertag')]]",
                        "exists": "true"
                    },
                    {
                        "value": "[resourceGroup().tags[parameters('expireaftertag')]]",
                        "notEquals": ""
                    },
                    {
                        "field": "[concat('tags[environment]')]",
                        "equals": "sandbox"
                    }
                ]
            },
            "then": {
                "effect": "append",
                "details": [
                    {
                        "field": "[concat('tags[', parameters('expireaftertag'), ']')]",
                        "value": "[resourceGroup().tags[parameters('expireaftertag')]]"
                    }
                ]
            }
        }
    },
    "id": "/providers/Microsoft.Management/managementGroups/HMCTS/providers/Microsoft.Authorization/policyDefinitions/HMCTSCopyResourceGroupexpireafterTag",
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "HMCTSCopyResourceGroupexpireafterTag"
}