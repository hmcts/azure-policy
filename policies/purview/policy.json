{
    "properties": {
      "displayName": "HMCTS Purview Security Activity Logging",
      "policyType": "Custom",
      "mode": "Indexed",
      "description": "Forwards all Azure Purview Activity Logs to an Azure Event Hub",
      "parameters": {
        "profileName": {
          "type": "String",
          "metadata": {
            "displayName": "Profile name",
            "description": "The diagnostic settings profile name"
          },
          "defaultValue": "purviewToEventHub"
        },
        "eventHubName": {
          "type": "String",
          "metadata": {
            "displayName": "EventHub Name",
            "description": "The event hub for Azure Diagnostics"
          },
          "defaultValue": "purview_audit"
        },
        "eventHubAuthRule": {
          "type": "String",
          "metadata": {
            "displayName": "Event Hub Authorization Rule Id",
            "description": "The Event Hub authorization rule Id for Azure Diagnostics. The authorization rule needs to be at Event Hub namespace level. e.g. /subscriptions/{subscription Id}/resourceGroups/{resource group}/providers/Microsoft.EventHub/namespaces/{Event Hub namespace}/authorizationrules/{authorization rule}",
            "strongType": "Microsoft.EventHub/Namespaces/AuthorizationRules",
            "assignPermissions": true
          },
          "allowedValues": [
            "/subscriptions/2307d175-7e49-434b-9ac2-515529b845f2/resourceGroups/soc-core-infra-sbox-rg/providers/Microsoft.EventHub/namespaces/soc-sbox-eventhubns/authorizationRules/RootManageSharedAccessKey",
            "/subscriptions/8ae5b3b6-0b12-4888-b894-4cec33c92292/resourceGroups/soc-core-infra-prod-rg/providers/Microsoft.EventHub/namespaces/soc-prod-eventhubns/authorizationRules/RootManageSharedAccessKey"
          ],
          "defaultValue": "/subscriptions/2307d175-7e49-434b-9ac2-515529b845f2/resourceGroups/soc-core-infra-sbox-rg/providers/Microsoft.EventHub/namespaces/soc-sbox-eventhubns/authorizationRules/RootManageSharedAccessKey"
        },
        "eventHubLocation": {
          "type": "String",
          "metadata": {
            "displayName": "Event Hub Location",
            "description": "The location the Event Hub resides in. Only Purview accounts in this location will be linked to this Event Hub.",
            "strongType": "location"
          },
          "defaultValue": ""
        },
        "metricsEnabled": {
          "type": "String",
          "metadata": {
            "displayName": "Enable metrics",
            "description": "Whether to enable metrics stream to the Event Hub - True or False"
          },
          "allowedValues": [
            "True",
            "False"
          ],
          "defaultValue": "False"
        },
        "logsEnabled": {
          "type": "String",
          "metadata": {
            "displayName": "Enable logs",
            "description": "Whether to enable logs stream to the Event Hub  - True or False"
          },
          "allowedValues": [
            "True",
            "False"
          ],
          "defaultValue": "True"
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Purview/accounts"
            },
            {
              "anyOf": [
                {
                  "value": "[parameters('eventHubLocation')]",
                  "equals": ""
                },
                {
                  "field": "location",
                  "equals": "[parameters('eventHubLocation')]"
                }
              ]
            },
            {
              "anyOf": [
                {
                  "field": "name",
                  "contains": "dc-purview"
                },
                {
                  "field": "name",
                  "contains": "dc-mspurview"
                }
              ]
            }
          ]
        },
        "then": {
          "effect": "deployIfNotExists",
          "details": {
            "type": "Microsoft.Insights/diagnosticSettings",
            "name": "[parameters('profileName')]",
            "existenceCondition": {
              "allOf": [
                {
                  "count": {
                    "field": "Microsoft.Insights/diagnosticSettings/logs[*]",
                    "where": {
                      "field": "Microsoft.Insights/diagnosticSettings/logs[*].enabled",
                      "equals": "[parameters('logsEnabled')]"
                    }
                  },
                  "greaterOrEquals": 1
                },
                {
                  "count": {
                    "field": "Microsoft.Insights/diagnosticSettings/metrics[*]",
                    "where": {
                      "field": "Microsoft.Insights/diagnosticSettings/metrics[*].enabled",
                      "equals": "[parameters('metricsEnabled')]"
                    }
                  },
                  "greaterOrEquals": 1
                }
              ]
            },
            "roleDefinitionIds": [
              "/providers/Microsoft.Authorization/roleDefinitions/92aaf0da-9dab-42b6-94a3-d43ce8d16293",
              "/providers/Microsoft.Authorization/roleDefinitions/749f88d5-cbae-40b8-bcfc-e573ddc772fa"
            ],
            "deployment": {
              "properties": {
                "mode": "incremental",
                "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "parameters": {
                    "purviewAccountName": {
                      "type": "string"
                    },
                    "location": {
                      "type": "string"
                    },
                    "eventHubAuthRule": {
                      "type": "string"
                    },
                    "eventHubName": {
                      "type": "string"
                    },
                    "metricsEnabled": {
                      "type": "string"
                    },
                    "logsEnabled": {
                      "type": "string"
                    },
                    "profileName": {
                      "type": "string"
                    }
                  },
                  "resources": [
                    {
                      "type": "Microsoft.Purview/accounts/providers/diagnosticSettings",
                      "apiVersion": "2017-05-01-preview",
                      "name": "[concat(parameters('purviewAccountName'), '/', 'Microsoft.Insights/', parameters('profileName'))]",
                      "location": "[parameters('location')]",
                      "dependsOn": [],
                      "properties": {
                        "eventHubName": "[parameters('eventHubName')]",
                        "eventHubAuthorizationRuleId": "[parameters('eventHubAuthRule')]",
                        "metrics": [
                          {
                            "category": "AllMetrics",
                            "enabled": "[parameters('metricsEnabled')]",
                            "retentionPolicy": {
                              "enabled": false,
                              "days": 0
                            }
                          }
                        ],
                        "logs": [
                          {
                            "category": "ScanStatus",
                            "enabled": "[parameters('logsEnabled')]"
                          },
                          {
                            "category": "DataSensitivity",
                            "enabled": "[parameters('logsEnabled')]"
                          },
                          {
                            "category": "PurviewAccountAuditEvents",
                            "enabled": "[parameters('logsEnabled')]"
                          }
                        ]
                      }
                    }
                  ],
                  "outputs": {
                    "policy": {
                      "type": "string",
                      "value": "[concat('Enabled diagnostic settings for ', parameters('purviewAccountName'))]"
                    }
                  }
                },
                "parameters": {
                  "location": {
                    "value": "[field('location')]"
                  },
                  "purviewAccountName": {
                    "value": "[field('name')]"
                  },
                  "eventHubAuthRule": {
                    "value": "[parameters('eventHubAuthRule')]"
                  },
                  "eventHubName": {
                    "value": "[parameters('eventHubName')]"
                  },
                  "metricsEnabled": {
                    "value": "[parameters('metricsEnabled')]"
                  },
                  "logsEnabled": {
                    "value": "[parameters('logsEnabled')]"
                  },
                  "profileName": {
                    "value": "[parameters('profileName')]"
                  }
                }
              }
            }
          }
        }
      }
    },
    "id": "/providers/Microsoft.Management/managementGroups/HMCTS/providers/Microsoft.Authorization/policyDefinitions/HMCTSPurview",
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "HMCTSPurview"
  } 