{
  "properties": {
    "displayName": "This policy enables you to specify a set of virtual machine size SKUs that can be deployed in HMCTS",
    "policyType": "Custom",
    "mode": "Indexed",
    "parameters": {
      "listOfAllowedSKUs": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed SKU names",
          "description": "HMCTS allowed VM SKU sizes"
        },
        "allowedValues": [
          "Standard_D2ds_v5",
          "Standard_D4ds_v5",
          "Standard_D8ds_v5",
          "Standard_D16ds_v5",
          "Standard_D32ds_v5",
          "Standard_E2ds_v5",
          "Standard_E4ds_v5",
          "Standard_E8ds_v5",
          "Standard_E16ds_v5",
          "Standard_E32ds_v5"
        ],
        "defaultValue": [
          "Standard_D2ds_v5",
          "Standard_D4ds_v5",
          "Standard_D8ds_v5",
          "Standard_D16ds_v5",
          "Standard_D32ds_v5",
          "Standard_E2ds_v5",
          "Standard_E4ds_v5",
          "Standard_E8ds_v5",
          "Standard_E16ds_v5",
          "Standard_E32ds_v5"
        ]
      } 
    },
    "policyRule": {
      "if": {
        "not": {
          "field": "Microsoft.Compute/virtualMachines/sku.name",
          "in": "[parameters('listOfAllowedSKUs')]"
        }
      },
      "then": {
        "effect": "deny"
      }
    }
  },
  "id": "/providers/Microsoft.Management/managementGroups/CFT-Sandbox/providers/Microsoft.Compute/virtualMachines/policyDefinitions/HMCTSVmSkuSize",
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "HMCTSVmSkuSize"
}