{
  "properties": {
    "displayName": "This policy enables you to specify a set of virtual machine SKUs sizes that can be deployed in HMCTS",
    "policyType": "Custom",
    "description": "Restrict the Virtual Machine SKU sizes that can be deployed in HMCTS",
    "mode": "Indexed",
    "parameters": {
      "allowedSKUs": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed Virtual Machine SKU Sizes",
          "description": "The allowed Virtual Machine SKU sizes in HMCTS"
        },
        "allowedValues": [
          "Standard_D2ds_v5",
          "Standard_D4ds_v5",
          "Standard_D8ds_v5",
          "Standard_D16ds_v5",
          "Standard_D32ds_v5",
          "Standard_D4pds_v5",
          "Standard_E2ds_v5",
          "Standard_E4ds_v5",
          "Standard_E8ds_v5",
          "Standard_E16ds_v5",
          "Standard_E32ds_v5"
        ],
        "defaultValue": [
          "Standard_D2ds_v5",
          "Standard_D4ds_v5",
          "Standard_D8ds_v5",
          "Standard_D16ds_v5",
          "Standard_D32ds_v5",
          "Standard_D4pds_v5",
          "Standard_E2ds_v5",
          "Standard_E4ds_v5",
          "Standard_E8ds_v5",
          "Standard_E16ds_v5",
          "Standard_E32ds_v5"
        ]
      } 
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "field": "Microsoft.Compute/virtualMachines/sku.name",
            "notIn": "[parameters('allowedSKUs')]"
          }
        ]
      },
      "then": {
        "effect": "Deny"
      }
    }
  },
  "id": "/providers/Microsoft.Management/managementGroups/HMCTS/providers/Microsoft.Authorization/policyDefinitions/HMCTSVmSkuSize",
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "HMCTSVmSkuSize"
}
