{
    "properties": {
      "displayName": "This policy enables you to specify a set of Redis Cache SKUs that can be deployed in HMCTS${display_name_suffix}",
      "policyType": "Custom",
      "description": "Restricts Redis Cache SKUs that can be deployed in HMCTS",
      "mode": "Indexed",
      "parameters": {
        "allowedSkus": {
          "type": "Array",
          "metadata": {
            "displayName": "Allowed Redis Cache SKUs",
            "description": "The allowed Redis Cache SKUs in HMCTS"
          },
          "allowedValues": [
            "Basic",
            "Standard"
          ],
          "defaultValue": [
            "Basic",
            "Standard"        
          ]
        }
      },
      "policyRule": {
        "if": {
          "anyOf": [
            {
              "allOf": [
                {
                  "field": "type",
                  "equals": "Microsoft.Cache/Redis"
                },
                {
                  "field": "Microsoft.Cache/Redis/sku.name",
                  "notIn": "[parameters('allowedSkus')]"
                }
              ]
            }
          ]
        },
        "then": {
          "effect": "Deny"
        }
      }
    },
    "id": "${root_scope}/providers/Microsoft.Authorization/policyDefinitions/HMCTSRedisCacheSku${name_suffix}",
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "HMCTSRedisCacheSku${name_suffix}"
  }