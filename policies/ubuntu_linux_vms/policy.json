{
  "properties": {
    "displayName": "Restrict Virtual Machines to Ubuntu Linux OS",
    "policyType": "Custom",
    "description": "This policy ensures that only Ubuntu Linux virtual machines can be deployed in HMCTS",
    "mode": "Indexed",
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Audit"
      },
      "allowedUbuntuPublishers": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed Ubuntu Publishers",
          "description": "The list of allowed Ubuntu image publishers"
        },
        "defaultValue": [
          "Canonical",
          "canonical"
        ]
      },
      "allowedUbuntuOffers": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed Ubuntu Offers",
          "description": "The list of allowed Ubuntu image offers"
        },
        "defaultValue": [
          "UbuntuServer",
          "0001-com-ubuntu-server-focal",
          "0001-com-ubuntu-server-jammy",
          "0001-com-ubuntu-pro-focal",
          "0001-com-ubuntu-pro-jammy"
        ]
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.publisher",
                "notIn": "[parameters('allowedUbuntuPublishers')]"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.offer",
                "notIn": "[parameters('allowedUbuntuOffers')]"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
