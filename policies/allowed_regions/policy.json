{
  "properties": {
    "displayName": "HMCTS Region Policy",
    "policyType": "Custom",
    "mode": "Indexed",
    "parameters": {
      "listOfAllowedResources": {
        "defaultValue": [
          "Microsoft.Sql/servers/databases",
          "Microsoft.DBforPostgreSQL/servers"
        ],
        "type": "Array",
        "metadata": {
          "displayName": "Allowed Resources",
          "description": "Resources only allowed to have be deployed to into UK South"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "in": "[parameters('listOfAllowedResources')]"
          },
          {
            "field": "location",
            "notEquals": "uksouth"
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  },
  "id": "/providers/Microsoft.Management/managementGroups/HMCTS/providers/Microsoft.Authorization/policyDefinitions/HMCTSRegionPolicy",
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "HMCTSRegionPolicy"
}