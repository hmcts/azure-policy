{
  "properties": {
    "displayName": "HMCTS Resource Location Policy",
    "policyType": "Custom",
    "mode": "Indexed",
    "parameters": {
      "listOfAllowedLocations": {
        "defaultValue": [
          "uksouth",
          "global",
          "UK South"
        ],
        "type": "Array",
        "metadata": {
          "displayName": "Allowed Locations",
          "description": "Permitted HMCTS Regions",
          "strongType": "location"
        }
      },
      "excludedResourceTypes": {
        "defaultValue": [
          "Microsoft.AzureActiveDirectory/b2cDirectories",
          "Microsoft.Cdn/profiles",
          "Microsoft.Cdn/profiles/endpoints"
        ],
        "type": "Array",
        "metadata": {
          "displayName": "Resource Types to exclude",
          "description": "Resource Types to exclude from compliance results"
        }
      },
      "excludedLocations": {
        "defaultValue": [
          "westeurope"
        ],
        "type": "Array",
        "metadata": {
          "displayName": "Excluded Locations",
          "description": "Locations to exclude from compliance results",
          "strongType": "location"
        }
      },
      "excludedResourceGroups": {
        "defaultValue": [
          "rg-chatbot"
        ],
        "type": "Array",
        "metadata": {
          "displayName": "Excluded Resource Groups",
          "description": "Resource Groups to exclude from compliance results"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "notIn": "[parameters('excludedResourceTypes')]"
          },
          {
            "field": "location",
            "notIn": "[parameters('listOfAllowedLocations')]"
          },
          {
            "field": "location",
            "notIn": "[parameters('excludedLocations')]"
          },
          {
            "field": "resourceGroup",
            "notIn": "[parameters('excludedResourceGroups')]"
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  },
  "id": "/providers/Microsoft.Management/managementGroups/HMCTS/providers/Microsoft.Authorization/policyDefinitions/HMCTSResourceLocationPolicy",
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "HMCTSResourceLocationPolicy"
}
